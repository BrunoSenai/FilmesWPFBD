<Window x:Class="FilmesDBWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmesDBWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtTitulo" HorizontalAlignment="Left" Height="23" Margin="35,65,0,0" VerticalAlignment="Top" Width="205"/>
        <Label Content="Titulo" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Nota" HorizontalAlignment="Left" Margin="35,109,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNota" HorizontalAlignment="Left" Height="23" Margin="35,142,0,0" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="btnCadastrar" Content="Cadastrar" HorizontalAlignment="Left" Margin="380,145,0,0" VerticalAlignment="Top" Width="75" Click="btnCadastrar_Click"/>
        <DataGrid x:Name="gridFilmes" HorizontalAlignment="Left" Height="185" Margin="30,255,0,0" VerticalAlignment="Top" Width="430"/>

    </Grid>
</Window>
